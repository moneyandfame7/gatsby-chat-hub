{
	"useTabs": true,
	"tabWidth": 2,
	"singleQuote": true,
	"bracketSpacing": true,
	"endOfLine": "lf",
	"trailingComma": "es5",
	"semi": false,
	"jsxSingleQuote": true,
	"printWidth": 120,

	"importOrder": [
		"^react$",
		"^gatsby",
		"<THIRD_PARTY_MODULES>",
		"^@modules/(.*)$",
		"^@services/(.*)$",
		"^@ui/(.*)$",
		"^@components",
		"^@components/(.*)$",
		"^@containers/(.*)$",
		"^@utils/(.*)$",
		"^@assets/(.*)$",
		"^[./]"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true
}
