{
  "compilerOptions": {
    "baseUrl": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext",
    "paths": {
      "@components/*": ["components/*"],
      "@components": ["components"],
      "@pages/*": ["pages/*"],
      "@pages": ["pages"],
      "@hooks": ["hooks"],
      "@services/*": ["services/*"],
      "@images/*": ["images/*"],
      "@animations/*": ["animations/*"],
      "@assets/*": ["assets/*"],
      "@utils/*": ["utils/*"],
      "@utils": ["utils"],
      "@store": ["store"],
      "@store/*": ["store/*"]
    }
  },
  "include": ["./src/**/*", "./gatsby-node.ts", "./gatsby-config.ts", "./plugins/**/*"]
}
